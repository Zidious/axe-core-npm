{
  "compilerOptions": {
    "moduleResolution": "node",
    "types": ["node"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "esNext",
    "target": "esNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "lib": ["DOM", "esNext", "esnext.asynciterable"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["./src/lib", "./src/bin"]
}
